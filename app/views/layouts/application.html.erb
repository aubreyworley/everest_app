<!DOCTYPE html>
<html>
<head>

	<title>EverestApp</title>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap-theme.min.css">

	<%= stylesheet_link_tag    'application', media: 'all' %>
	<%= csrf_meta_tags %>
</head>
<body>
<!-- top navbar -->
  <nav class="navbar">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand" href="/"></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav navbar-right">
          <li>
            <% if current_user %>
              <a href="/logout" class="btn">Log Out</a>
            <% else %>
              <button type="button" data-toggle="modal" data-target="#loginUpModal"class="btn btn-dark navbar-btn">Login</button>
              <button type="button" data-toggle="modal" data-target="#signUpModal"class="btn btn-dark navbar-btn">Sign Up</button>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-menu-hamburger"></span></a>
            <ul class="dropdown-menu">
              <li><a href="/about">About</a></li>
              <li><a href="/profile">Profile</a></li>
            </ul>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div>
  </nav>
  <!-- top navbar end --> 

	<%= yield %>

<%= javascript_include_tag 'application' %>

<!-- Latest compiled and minified JavaScript -->
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

</body>
</html>
